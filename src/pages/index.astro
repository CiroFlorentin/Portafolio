---
import Layout from "@/layouts/Layout.astro";

import SectionContainer from "@/components/SectionContainer.astro";
import CodeIcon from "@/icons/CodeIcon.astro";
import Projects from "@/components/Projects.astro";
import Profile from "@/icons/Profile.astro";
import AboutMe from "@/components/AboutMe.astro";
import Hero from "@/components/Hero.astro";
import TitleSection from "@/components/TitleSection.astro";
---

<Layout
    title="Portfolio de CiroFlorentin - Desarrollador y Programador "
    description="Hola, soy CiroFlorentin, un desarrollador y programador apasionado por crear soluciones innovadoras y eficientes."
    ><main class="px-8 md:px-20">
        <SectionContainer class="py-16 md:py-36" id="top">
            <Hero>
                <slot />
            </Hero>
        </SectionContainer>
        <div class="space-y-24">
            <SectionContainer id="proyectos">
                <TitleSection>
                    <CodeIcon class="size- md:size-8" />
                    Proyectos
                </TitleSection>
                <Projects />
            </SectionContainer>

            <SectionContainer id="sobre-mi">
                <h2 class={`flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white ${Astro.props.className}`}>
                    <Profile class="size-8" />
                    Sobre m√≠
                </h2>
                <AboutMe />
            </SectionContainer>
        </div>
    </main>
</Layout>
